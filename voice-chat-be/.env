# FastAPI 애플리케이션 설정
ENVIRONMENT=local

# 데이터베이스 설정 (MariaDB)
DB_ROOT_PASSWORD=password
DB_HOST=mariadb
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=voice_chat_db

# Milvus 벡터 데이터베이스 설정
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530
MILVUS_COLLECTION=voice_conversations
MILVUS_DB_ALIAS=default

# Hugging Face Hub에 접근하기 위한 인증 토큰
# google/medgemma-27b-text-it와 같은 Gated 모델을 다운로드하려면 필요합니다.
HUGGING_FACE_HUB_TOKEN="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"

EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
WHISPER_MODEL=small
LOG_LEVEL=INFO

LLM_ENABLED=true
TTS_ENABLED=false
HF_HOME=./.hf_cache

